{
  "name": "ts-patch",
  "version": "1.0.4",
  "description": "Patch typescript to support custom transformers in tsconfig.json",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rimraf dist coverage .nyc_output",
    "compile": "tsc",
    "build": "npm run clean && npm run compile && npm run build:patch",
    "build:patch": "rollup -c",
    "------------ ": "-------------",
    "test": "mocha",
    "test:nyc": "nyc --reporter html --reporter text mocha",
    "------------": "-------------",
    "postbuild": "node scripts/postbuild.js",
    "prepublishOnly": "npm run build && npm run test",
    "preversion": "npm run build && npm run test",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "private": true,
  "keywords": [
    "typescript",
    "transform",
    "transformer",
    "plugin",
    "config",
    "ast"
  ],
  "author": "Ron S.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nonara/ts-patch.git"
  },
  "bugs": {
    "url": "https://github.com/nonara/ts-patch/issues"
  },
  "homepage": "https://github.com/nonara/ts-patch#readme",
  "dependencies": {
    "chalk": "^2.4.2",
    "global-prefix": "^3.0.0",
    "minimist": "^1.2.0",
    "shelljs": "^0.8.3",
    "strip-ansi": "^5.2.0"
  },
  "bin": {
    "ts-patch": "./dist/bin/cli.js"
  },
  "peerDependencies": {
    "typescript": ">2.7.0"
  },
  "devDependencies": {
    "@phenomnomnominal/tsquery": "^3.0.0",
    "@types/chai": "^4.2.4",
    "@types/expect": "^1.20.4",
    "@types/istanbul": "^0.4.30",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.7",
    "@types/resolve": "0.0.8",
    "@types/rewire": "^2.5.28",
    "@types/shelljs": "^0.8.5",
    "@types/sinon-chai": "^3.2.3",
    "@types/test-console": "^1.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.7",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "rewire": "^4.0.1",
    "rimraf": "^3.0.0",
    "rollup": "1.25.2",
    "rollup-plugin-dts": "^1.1.10",
    "rollup-plugin-typescript2": "^0.24.3",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.16",
    "test-console": "^1.1.0",
    "ts-nameof": "^2.0.0",
    "ts-node": "^8.4.1",
    "ts-transform-css-modules": "^0.3.3",
    "ts-transform-graphql-tag": "^0.2.1",
    "ts-transform-img": "^0.3.2",
    "ts-transform-react-intl": "^0.4.0",
    "ts-transformer-enumerate": "^0.3.1",
    "ts-transformer-keys": "^0.3.4",
    "typescript": "^3.6.4"
  },
  "directories": {
    "resources": "./dist/resources"
  }
}
