{
  "include": ["src"],

  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["es2019"],
    "outDir": "lib",
    "target": "es5",
    "module":"commonjs",
    "moduleResolution": "node",
    "removeComments": true,

    "allowJs": false,
    "allowUnreachableCode": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,

    "rootDirs": ["src", "lib"]
  }
}