{
  "include": ["src"],
  "exclude": ["src/patch", "test", "dist"],

  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["es2019"],
    "outDir": "dist",
    "target": "es5",
    "module":"CommonJS",
    "moduleResolution": "node",
    "removeComments": true,

    "newLine": "LF",
    "allowJs": false,
    "allowUnreachableCode": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,

    "rootDirs": ["src", "dist"]
  }
}
