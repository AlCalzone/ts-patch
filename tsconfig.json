{
  "include": ["src"],

  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["es2015"],
    "outDir": "built",
    "target": "es5",
    "module":"commonjs",
    "moduleResolution": "node",

    "allowJs": false,
    "allowUnreachableCode": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,

    "rootDirs": ["src", "lib"],
    "baseUrl": "./src",
    "paths": {
      "@cli/*": [ "cli/*" ],
      "@patch/*": [ "patch/*" ]
    }
  }
}